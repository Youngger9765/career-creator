[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    .eggs,
    *.egg,
    build,
    dist,
    alembic/versions/*,
    .pytest_cache,
    .mypy_cache

# E203: whitespace before ':' (conflicts with Black)
# W503: line break before binary operator (conflicts with Black)

per-file-ignores =
    # Imported but unused in __init__.py files
    __init__.py: F401
    # Allow assert in tests
    test_*.py: S101